<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="1dip" />
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:centerColor="#09094F"
                android:startColor="#0B0B61"
                android:endColor="#0B0B61"
                android:type="linear"
                />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="1dip" />
            <solid android:color="#090D45"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <corners android:radius="2dip" />
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:centerColor="#09094F"
                android:startColor="#0B0B61"
                android:endColor="#0B0B61"
                android:type="linear"
                />
        </shape>
    </item>
</selector>